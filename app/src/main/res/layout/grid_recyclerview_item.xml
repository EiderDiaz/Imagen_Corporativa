<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:backgroundTint="@color/colorPrimary"
        card_view:cardCornerRadius="20dp"
        android:id="@+id/cardview_mascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imagen_mascota"
                android:scaleType="centerCrop"
                android:src="@drawable/sanic"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <ImageView
                android:id="@+id/raiting_mascota"
                android:layout_below="@+id/imagen_mascota"
                android:src="@drawable/bone"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/tvnombre_mascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imagen_mascota"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:text="sanic"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/calificacion"
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:text="5"
                android:layout_toRightOf="@+id/raiting_mascota"
                android:layout_below="@id/imagen_mascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/bone1"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/imagen_mascota"
                android:id="@+id/boton_rate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
